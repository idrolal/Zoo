{{#if isAdmin}}
<h2>Страница изменения тарифов</h2>
  {{#each tariffs}}
  <li>
    <form id="editTariff" method="PUT" action="/tariff/{{id}}">
    <p>Тариф:{{name}}</p><br>
    <input type="text" name="name" placeholder="имя..."/>
    <p>Описание:{{description}}</p><br>
    <input type="text" name="description" placeholder="описание..."/>
    <p>Цена:{{price}}</p>
    <input type="text" name="price" placeholder="цена..."/>
  </li>
  <button id="editBtn" class="editBtn" type='submit'>Изменить</button>
  {{!-- <a href="" class="editBtn"><span>Изменить</span></a> --}}
  </form>
  {{/each}}
</ul>
{{else}}
<div class="wrap">
  {{#each tariffs}}
  <div class="box">
    <div class="top">
      <p class="title">Тариф:«{{name}}»</p>
      <p class="price">
        {{price}}
        <span>/RUB.</span>
      </p>
      <button id="button" class="button" onclick="alertCookieValue()">Купить билет</button>
      {{!-- <button onclick="alertCookieValue()">Show cookie value</button> --}}
    </div>
    <div class="bottom">
      <ul>
        <li>{{description}}</li>
      </ul>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}



